{
    "name": "folder-indexing",
    "displayName": "Folder Indexing",
    "description": "Creates in-memory index of files in folder to allow opening them quickly",
    "version": "0.0.1",
    "publisher": "astral-keks",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "folderindexing.rebuildindex",
            "title": "Folder Indexing: Rebuild"
        }],
        "configuration": {
            "title": "Folder Indexing settings",
            "properties": {
                "folderindexing.exclude": {
                    "type": "array",
                    "default": ["*\\bin\\*", "*\\obj\\*", "*\\.svn\\*", "*\\.git\\*", "*\\packages\\*"],
                    "description": "Glob patterns to exclude from folder index"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "build": "npm run dependencies && npm run compile",
        "dependencies": "npm install",
        "compile": "tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "wildcard2": "^0.0.2"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}